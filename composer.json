{
  "repositories": [
    {
      "type": "composer",
      "url": "http://wpackagist.org"
    },
    {
      "type": "package",
      "package": {
        "name": "wordpress/wordpress",
        "type": "webroot",
        "version": "4.0",
        "dist": {
          "type": "zip",
          "url": "https://github.com/WordPress/WordPress/archive/4.0.zip"
        },
        "require": {
          "fancyguy/webroot-installer": "1.1.0"
        }
      }
    }
  ],
  "require": {
    "wordpress/wordpress": "4.0",
    "fancyguy/webroot-installer": "1.1.0",
    "wpackagist-plugin/wordpress-seo": "1.6",
    "wpackagist-plugin/google-analytics-for-wordpress": "5.0.5",
    "wpackagist-plugin/google-sitemap-generator": "4.0.7.1",
    "wpackagist-theme/twentyfourteen": "*"
  },
  "extra": {
    "installer-paths": {
      "app/themes/{$name}": ["type:wordpress-theme"],
      "app/plugins/{$name}": ["type:wordpress-plugin"]
    },
    "webroot-dir": "wp",
    "webroot-package": "wordpress/wordpress"
  }
}
